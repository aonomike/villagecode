<!doctype html>
<html lang="en">
    <head>
      <meta charset="utf-8">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <title><%= content_for?(:title) ? yield(:title) : "Village Code" %></title>
      <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Village Code" %>">
      <%= stylesheet_link_tag 'application'%>
      <%= csrf_meta_tags %>
      <link rel="icon" href="/img/favicon.png" type="image/png">
      <meta name="viewport" content="width=device-width, initial-scale=0.9">
      <link href='http://fonts.googleapis.com/css?family=Lato:300,400%7CRaleway:100,400,300,500,600,700%7COpen+Sans:400,500,600' rel='stylesheet' type='text/css'>
    </head>
    <body>
        <%= render "layouts/navigation" %>
        <%if flash[:notice]!=nil%>
          <div id="alert_message" class="alert alert-success alert-dismissible" >
            <span class="close" data-dismiss="alert">&times;</span>
            <span><%=flash[:notice].html_safe%></span>
            <%flash[:notice] = nil %>
          </div>
        <%end%>

        <%= yield %>
        <%= render "layouts/footer" %>
        <%= javascript_include_tag 'application' %>

        <script type="text/javascript">
        window.setTimeout(function() {
            $("#alert_message").fadeTo(500, 0).slideUp(500, function(){
              $(this).remove(); 
            });
          }, 3000);
        </script>
    </body>
</html>
