<% content_for :title do %>
  <%=@title%>
<% end %>
        <div class="main-container">
        <section class="page-title page-title-4 image-bg overlay parallax">
                <div class="background-image-holder">
                    <img alt="Background Image" class="background-image" src="assets/raspberry.jpg" />
                </div>
                <div class="container">
                    <div class="row">
                        <div class="col-md-6">
                            <h2 class="uppercase mb8">Natujenge</h2>
                            <p class="lead mb0">Let Us Build</p>
                        </div>
                      
                    </div>
                    <!--end of row-->
                </div>
                <!--end of container-->
            </section>
            <section>
                <div class="container">
                    <div class="row">
                        <div class="col-sm-12">
                            <h3 class="uppercase color-primary mb40 mb-xs-24">We Make</h3>
                            <h4><%=t('we_make')%></h4>
                        </div>
                    
                    </div>
                    <!--end of row-->
                </div>
                <!--end of container-->
            </section>
            <section class="image-square right bg-secondary">
                <%initiative = @initiatives.first%>
                <div class="col-md-6 image">
                    <div class="background-image-holder overlay">
                        <img alt="image" class="background-image" src="assets/masinde.jpg" />
                    </div>
                </div>
                <div class="col-md-6 content">
                    <div class="text-right text-left-xs">
                        <h2 class="uppercase"><%=initiative.initiative_name.html_safe%></h2>
                        <p>
                            <%=t('cool_projects').html_safe%>
                        </p>
                        <h6 class="uppercase mb8">Come to any initiative</h6>
                        <h6 class="uppercase mb8">Multi-initiative discounts</h6>
                        <h6 class="uppercase mb8">Train with friends</h6>
                        <%=link_to "Book A Session Now",new_initiative_initiative_booking_path(initiative),:class=>"btn btn-lg mt32 mb0"%>
                    </div>
                </div>
            </section>
            <section class="image-square left">
                <%initiative = @initiatives.last%>
                <div class="col-md-6 image">
                    <div class="background-image-holder overlay">
                        <img alt="image" class="background-image" src="assets/mecha.jpg" />
                    </div>
                </div>
                <div class="col-md-6 col-md-offset-1 content overflow-hidden">
                    <div>
                        <h2 class="uppercase"><%=initiative.initiative_name.html_safe%></h2>
                        <p>
                            <%=t('mecha_mind').html_safe%>
                        </p>
                        <h6 class="uppercase mb8">Flexible booking times</h6>
                        <h6 class="uppercase mb8">Personal Advice</h6>
                        <h6 class="uppercase mb8">Multi-initiative discounts</h6>
                        <h6 class="uppercase mb8">Weekly progress tracking</h6>
                        <%=link_to "Book A Session Now",new_initiative_initiative_booking_path(initiative),:class=>"btn btn-lg mt32 mb0"%>
                    </div>
                </div>
            </section>
            <section class="bg-dark">
                <div class="container">
                    <div class="row">
                        <div class="col-md-8 col-md-offset-2 text-center">
                            <a href="#">
                                <h2 class="uppercase color-primary mb16">#wemake</h2>
                            </a>
                            <h6 class="uppercase">Follow Us For Updates</h6>
                        </div>
                        </div>
                    </div>
                    <!--end of row-->
                </div>
            </section>