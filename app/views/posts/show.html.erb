    <body>
        <div class="main-container">
            <section class="page-title page-title-4 bg-secondary">
                <div class="container">
                    <div class="row">
                        <div class="col-md-6">
                            <h3 class="uppercase mb0"><%=@post.post_title%></h3>
                        </div>
                        <div class="col-md-6 text-right">
                            <ol class="breadcrumb breadcrumb-2">
                                <li>
                                    <a href="/">Village Code</a>
                                </li>
                                <li>
                                    <%=link_to "Blog", blog_path%>
                                </li>
                                <li class="active">Post</li>
                            </ol>
                        </div>
                    </div>
                    <!--end of row-->
                </div>
                <!--end of container-->
            </section>
            <section>
                <div class="container">
                    <div class="row">
                        <div class="col-sm-10 col-sm-offset-1">
                            <div class="post-snippet mb64">
                                <%=get_post_picture(@post)%>
                                
                                <div class="post-title">
                                   <span class="label"><%=get_value_from_date(@post.created_at,"day short_month")%></span>
                                   <h4 class="inline-block"><%=@post.by_line%></h4>
                                </div>
                                <ul class="post-meta">
                                    <% if can? :update, Post %>
                                    <%if current_user.id==@post.user_id%>
                                    <li>
                                        <i class="ti-pencil"></i>
                                        <%=link_to "Edit Post",edit_post_path(@post)%>
                                    </li>
                                    <%end%>
                                    <%end%>
                                    <li>
                                        <i class="ti-user"></i>
                                        <span>Written by
                                            <a href="#"><%=get_author(@post)%></a>
                                        </span>
                                    </li>
                                    <li>
                                        <i class="ti-tag"></i>
                                        <span>Tagged as
                                            <%@post.post_tags.each do |post_tag|%>
                                            <a href="#"><%=post_tag.tag%></a>
                                            <%if post_tag!=@post.post_tags.last%>,<%end %>
                                            <%end%>
                                        </span>
                                    </li>
                                </ul>
                                <hr>
                                <%=@post.post_content.html_safe%>
                            </div>
                            <!--end of post snippet-->
                            <hr>
                            <div class="comments">
                                <h5 class="uppercase">3 Comments</h5>
                                <ul class="comments-list">
                                    <li>
                                        <div class="avatar">
                                            <img alt="Avatar" src="/assets/avatar1.png" />
                                        </div>
                                        <div class="comment">
                                            <span class="uppercase author">Jane Lovell, September 8</span>
                                            <a class="btn btn-sm" href="#">Reply</a>
                                            <p>
                                                Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.
                                            </p>
                                        </div>
                                        <ul>
                                            <li>
                                                <div class="avatar">
                                                    <img alt="Avatar" src="/assets/avatar2.png" />
                                                </div>
                                                <div class="comment">
                                                    <span class="uppercase author">Tim Jackson, September 8</span>
                                                    <a class="btn btn-sm" href="#">Reply</a>
                                                    <p>
                                                        Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.
                                                    </p>
                                                </div>
                                            </li>
                                        </ul>
                                    </li>
                                    <li>
                                        <div class="avatar">
                                            <img alt="Avatar" src="/assets/avatar3.png" />
                                        </div>
                                        <div class="comment">
                                            <span class="uppercase author">Roland Sims, September 9</span>
                                            <a class="btn btn-sm" href="#">Reply</a>
                                            <p>
                                                Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.
                                            </p>
                                        </div>
                                    </li>
                                </ul>
                                <hr>
                                <h5 class="uppercase">Leave A Comment</h5>
                                <form>
                                    <input name="name" type="text" placeholder="Your Name" />
                                    <input name="email" type="text" placeholder="Email Address" />
                                    <textarea rows="3" placeholder="Comment"></textarea>
                                    <input type="submit" value="Leave Comment" />
                                </form>
                            </div>
                            <!--end of comments-->
                        </div>
                        <!--end of nine col-->
                    </div>
                    <!--end of container row-->
                </div>
                <!--end of container-->
            </section>