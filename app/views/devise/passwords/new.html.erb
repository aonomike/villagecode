<div class="main-container">
            <section class="cover fullscreen image-bg overlay">
                <div class="background-image-holder">
                    <img alt="image" class="background-image" src="/assets/home12.jpg" />
                </div>
                <div class="container v-align-transform">
                    <div class="row">
                        <div class="col-md-4 col-md-offset-4 col-sm-8 col-sm-offset-2">
                            <div class="feature bordered text-center">
                                <h4 class="uppercase">Forgot Your Password</h4>
  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :role => 'form',:class=>'text-left'}) do |f| %>
    <p>We'll send password reset instructions.</p>
    <%= devise_error_messages! %>
    <div class="form-group">
      <%= f.text_field :email,class: 'mb0', :placeholder=>'Email' %>      
    </div>
     <%= f.submit 'Reset Password', :class => 'button right' %>
  <% end %>
                            </div>
                        </div>
                    </div>
                    <!--end of row-->
                </div>
                <!--end of container-->
            </section>
        </div>